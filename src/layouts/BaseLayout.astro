---
import '../styles/globals.css';
import { SidebarNav } from '../components/SidebarNav';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title,
  description = 'Fine art photography by Corey Hendrickson.',
  image = '/images/Ghost_Mall-1.jpg',
  type = 'website',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="Vermont Photographer, Middlebury Photographer, Vermont Fine Art Photographer, Vermont Landscape Photographer, New York Times, Boston Globe, Middlebury portrait photographer, Middlebury Vermont" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL.href} />
    <meta property="og:site_name" content="Corey Hendrickson Fine Art" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL.href} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <title>{title}</title>

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Corey Hendrickson Fine Art",
      "url": "https://coreyhendrickson.art",
      "description": "Fine art photography by Corey Hendrickson.",
      "founder": {
        "@type": "Person",
        "name": "Corey Hendrickson",
        "jobTitle": "Fine Art Photographer",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Middlebury",
          "addressRegion": "VT"
        }
      }
    })} />
  </head>
  <body class="font-sans antialiased h-screen overflow-hidden">
    <SidebarNav client:load currentPath={Astro.url.pathname} />
    <main class="lg:ml-64 h-screen pt-12 lg:pt-0">
      <slot />
    </main>
  </body>
</html>
